<div class="container">
  <div class="header">
    <h1>Eat-Da-Burger</h1>
  </div>
  
  <img src="../../assets/img/burger.jpg" style="width: 100px; height: 100px">
  <hr>
  <h2>Burgers to Devour!!</h2>

  <ol>
    {{#each burger}} {{#unless devoured}}
    <li>
      {{burger_name}}
      <button class="devour" data-id="{{id}}" data-newDevour="{{devour}}"> Devour</button>
    </li>
    {{/unless}} {{/each}}
  </ol>

  <hr>
  <h2>Burgers Devoured!!</h2>

  <ol>
    {{#each burger}} {{#if devoured}}
    <li>
      {{burger_name}}
    </li>
    {{/if}} {{/each}}
  </ol>
  <hr>
  <h2>Add a Burger!</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger-field">Burger Name:</label>
      <input type="text" id="burger-field" name="name">
    </div>

    <button type="submit">Add-A-Burger</button>
  </form>
</div>